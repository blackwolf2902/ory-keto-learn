{
    "$id": "https://schemas.ory.sh/presets/kratos/identity.basic.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User",
    "type": "object",
    "properties": {
        "traits": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email",
                    "title": "E-Mail",
                    "ory.sh/kratos": {
                        "credentials": {
                            "password": {
                                "identifier": true
                            }
                        },
                        "recovery": {
                            "via": "email"
                        },
                        "verification": {
                            "via": "email"
                        }
                    }
                },
                "name": {
                    "type": "string",
                    "title": "Full Name"
                }
            },
            "required": [
                "email"
            ],
            "additionalProperties": false
        }
    }
}